<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Primary theme color of the app (sets background color of the app bar). -->
        <item name="colorPrimary">#afb42b</item>

        <!-- Primary dark theme color of the app (sets color of status bar)-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#afb42b</item>
    </style>

    <style name="questionTheme" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dim_10</item>
        <item name="android:layout_marginBottom">@dimen/dim_10</item>
        <item name="android:layout_marginStart">@dimen/dim_10</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:layout_marginEnd">@dimen/dim_10</item>
    </style>

    <style name="responseItemTheme" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dim_10</item>
        <item name="android:layout_marginBottom">@dimen/dim_10</item>
        <item name="android:layout_marginStart">@dimen/dim_5</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/dim_5</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:layout_marginEnd">@dimen/dim_10</item>

    </style>

    <style name="questionContainerTheme" parent="questionTheme">
        <item name="android:orientation">vertical</item>

    </style>
</resources>
